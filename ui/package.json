{
  "name": "photoview-ui",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/photoview/photoview.git",
    "directory": "ui"
  },
  "license": "GPL-3.0",
  "description": "UI app for Photoview",
  "scripts": {
    "start": "vite --host=0.0.0.0",
    "mon": "nodemon",
    "build": "vite build",
    "build:dev": "vite build --mode development --sourcemap --minify=false",
    "lint": "eslint ./src --max-warnings 0 --config .eslintrc.js",
    "lint:ci": "eslint ./src --config .eslintrc.js --no-color --fix-dry-run > eslint-report.txt",
    "lint:staged": "lint-staged",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ci": "CI=true vitest --reporter=junit --reporter=verbose --run --coverage",
    "genSchemaTypes": "apollo client:codegen --target=typescript --globalTypesFile=src/__generated__/globalTypes.ts --passthroughCustomScalars && prettier --write */**/__generated__/*.ts",
    "extractTranslations": "i18next -c i18next-parser.config.js"
  },
  "dependencies": {
    "@apollo/client": "^4.0.9",
    "@apollo/federation": "^0.38.1",
    "@babel/preset-typescript": "^7.28.5",
    "@graphql-tools/schema": "^10.0.27",
    "@headlessui/react": "^2.2.9",
    "@types/geojson": "^7946.0.16",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/mapbox-gl": "^3.4.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-helmet": "^6.1.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.35",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "blurhash": "^2.0.5",
    "classnames": "^2.5.1",
    "connect-history-api-fallback": "^2.0.0",
    "copy-to-clipboard": "^3.3.3",
    "glob": "^11.0.3",
    "graphql-ws": "^6.0.6",
    "i18next": "^25.6.0",
    "jsdom": "^26.1.0",
    "luxon": "^3.7.2",
    "mapbox-gl": "^3.16.0",
    "node": "^25.1.0",
    "npm": "^11.6.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-blurhash": "^0.3.0",
    "react-dom": "^19.2.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.66.0",
    "react-i18next": "^16.2.4",
    "react-router": "^7.9.5",
    "react-swipeable": "^7.0.2",
    "react-test-renderer": "^19.2.0",
    "styled-components": "^6.1.19",
    "tailwind-override": "^0.6.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
    "url-join": "^5.0.0",
    "vite": "^7.2.1",
    "vite-plugin-svgr": "^4.5.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.7",
    "apollo": "^2.34.0",
    "apollo-language-server": "1.26.9",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "i18next-parser": "^9.3.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  },
  "overrides": {
    "graphql": "^16.12.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md,graphql}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --cache --fix --max-warnings 0"
  },
  "browserslist": {
    "production": [
      "defaults",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
